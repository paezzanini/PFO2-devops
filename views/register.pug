doctype html
html
  head
    title Registrarse
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          h1.mb-4.text-center Registrarse

          form(action='/api/users' method='POST')
            .mb-3
              label(for='username' class='form-label') Nombre de usuario:
              input(type='text' name='username' id='username' class='form-control' placeholder='Ingresa tu nombre de usuario' required)

            .mb-3
              label(for='name' class='form-label') Nombre:
              input(type='text' name='name' id='name' class='form-control' placeholder='Ingresa tu nombre' required)

            .mb-3
              label(for='password' class='form-label') Contraseña:
              input(type='password' name='password' id='password' class='form-control' placeholder='Ingresa tu contraseña' required)

            button(type='submit' class='btn btn-primary w-100') Registrarse

            br
            br
            a.btn.btn-warning.d-block.text-center(href='/login' class='btn btn-link') Ya tengo una cuenta
